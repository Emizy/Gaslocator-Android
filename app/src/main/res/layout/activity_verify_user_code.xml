<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_agency_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.nevogas.activities.AgencyRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#b93b3b">

        <ImageView
            android:layout_width="258dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/head2"
            android:contentDescription="logo" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="235dp">


        <EditText
            android:id="@+id/email"
            android:layout_width="282dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="70dp"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:hint="Enter your Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="40dp"
            android:textSize="14dp" />


        <Button
            android:id="@+id/submit"
            android:layout_width="282dp"
            android:layout_height="45dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="140dp"
            android:background="#d84949"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"
            android:gravity="center"
            android:text="VERIFY COD"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:textStyle="bold"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp" />
    </RelativeLayout>

</RelativeLayout>